.node
    box-sizing border-box
    position absolute
    overflow hidden

.node-label
    padding 4px
    line-height 1em
    white-space pre
    z-index: 1000

.node-value
    color rgba(0,0,0,0.8)
    font-size 12px
    margin-top 1px
    z-index: 1000

svg
    font-family sans-serif
    font-size 16px
    width 960px
    margin 1em auto
    position relative

h1 
    font-size: 20px
    text-align: center
    font-weight: bold
    color #6a6a6a

